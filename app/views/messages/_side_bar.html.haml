.sidebar
  .sidebar__upper
    .sidebar__upper__user
      .sidebar__upper__user__name
        = current_user.name
      .sidebar__upper__user__icon
        = link_to new_group_path do
          = icon('fa', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog')

  .sidebar__lower
    .sidebar__lower__list
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .sidebar__lower__list__group
            = group.name
          .sidebar__lower__list__message   
            = group.show_last_message
